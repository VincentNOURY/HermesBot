<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>HermesBot</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <%- include('../templates/navbar') %>
    <%- include('../templates/leftbar') %>

    <div id="message_box">
        <div id="message_wrapper">
            <% if (messages) { %>
                <% messages.forEach(function(message) { %>
                    <div class="message_container">
                        <h4><%= message.author %></h4>
                        <p class="message_content"><%= message.content %></p>
                        <p class="message_date"><%= message.date %></p>
                    </div>
                <% }); %>
            <% }; %>
        </div>
        <div id="message_send">
            <form method="POST" action="/send_message">
                <input name="message" type="text" autocomplete="off">
                <input type="hidden" name="channel_id" value="<%= channel_id %>">
                <input type="hidden" name="server_id" value="<%= server_id %>">
                <button type="submit"><img src="https://www.kindpng.com/picc/m/5-57367_black-shape-paper-plane-paper-airplane-clipart-png.png" alt="send"></button>
            </form>
        </div>
    </div>

    
    
</body>
</html>